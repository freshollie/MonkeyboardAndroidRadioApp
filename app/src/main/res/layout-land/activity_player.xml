<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.freshollie.monkeyboard.keystoneradio.ui.PlayerActivity">

    <LinearLayout
        android:id="@+id/station_list_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/backgroundDarkAccent"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_saved_stations_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_saved_stations_message"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/station_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
            android:scrollbars="vertical" />
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/playing_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/player_attributes_panel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    android:id="@+id/channel_status_bar">
                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/settings_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:background="?selectableItemBackgroundBorderless"
                            android:contentDescription="@string/settings_icon_description"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_settings_white_24dp" />

                        <TextView
                            android:id="@+id/play_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/radio_status_connecting"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/signal_strength"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/settings_button"
                            android:gravity="left"
                            android:paddingRight="5dp"
                            android:text="100%"
                            android:layout_alignBottom="@id/signal_strength_icon"
                            android:textAlignment="gravity"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/signal_strength_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:layout_toLeftOf="@id/signal_strength"
                            app:srcCompat="@drawable/ic_signal_cellular_0_bar_white_24dp" />

                        <TextView
                            android:id="@+id/data_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/program_stereo_mode"
                            android:layout_toLeftOf="@id/signal_strength_icon"
                            android:text="128 Kbps"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/program_stereo_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/signal_strength_icon"
                            android:text="Stereo"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/station_ensemble_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BBC National DAB"
                            android:layout_marginLeft="5dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/fm_frequency_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/play_status"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            android:textSize="40sp" />
                        <TextView
                            android:id="@+id/station_genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/station_ensemble_name"
                            android:text="Pop"
                            android:layout_marginLeft="5dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="20sp" />
                        <SeekBar
                            android:id="@+id/fm_seek_bar"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/settings_button" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/channel_status_bar"
                    android:layout_marginLeft="5dp"
                    android:text="BBC Radio 1"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="60sp" />

                <Switch
                    android:id="@+id/mode_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:showText="true"
                    android:textOff="@string/dab"
                    android:textOn="@string/fm" />

                <ImageButton
                    android:id="@+id/volume_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_volume_mute_white_24dp" />

                <SeekBar
                    android:id="@+id/volume_seek_bar"
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:layout_above="@+id/volume_button"
                    android:layout_alignParentLeft="true"
                    android:max="16"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/volume_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/volume_seek_bar"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/program_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/channel_name"
                    android:layout_alignParentLeft="true"
                    android:padding="7dp"
                    android:text="Test program text, this will display text about the program"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textSize="30sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/player_control_panel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/skip_next_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_skip_next_white_24dp" />

                <ImageButton
                    android:id="@+id/search_forward_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/skip_next_button"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_fast_forward_white_24dp" />

                <ImageButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_play_arrow_white_24dp" />

                <ImageButton
                    android:id="@+id/search_backwards_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/skip_previous_button"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_fast_rewind_white_24dp" />

                <ImageButton
                    android:id="@+id/skip_previous_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_skip_previous_white_24dp" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_channel_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            app:layout_anchor="@id/player_attributes_panel"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@drawable/ic_add_white_24dp" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
